{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "outDir": "build",
    "rootDir": "src",
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "useDefineForClassFields": false,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
